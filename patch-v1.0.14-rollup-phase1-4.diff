+# ---- Phase 3: window centering helper --------------------------------------
+def center_on_parent(win, parent=None, pad: int = 0):
+    # Centraliza a janela `win` sobre seu pai (ou sobre a tela como fallback).
+    # - parent: janela pai; se None, usa win.master ou winfo_toplevel()
+    # - pad: margem mÃ­nima (px) a partir da borda da tela
+    try:
+        win.update_idletasks()
+        if parent is None:
+            parent = getattr(win, "master", None) or win.winfo_toplevel()
+        px, py = parent.winfo_rootx(), parent.winfo_rooty()
+        pw, ph = parent.winfo_width(), parent.winfo_height()
+        ww, wh = win.winfo_width(), win.winfo_height()
+        x = max(pad, px + (pw - ww) // 2)
+        y = max(pad, py + (ph - wh) // 2)
+        win.geometry(f"+{x}+{y}")
+    except Exception:
+        # Fallback: centraliza na tela
+        sw, sh = win.winfo_screenwidth(), win.winfo_screenheight()
+        ww, wh = win.winfo_width(), win.winfo_height()
+        x, y = (sw - ww) // 2, (sh - wh) // 2
+        win.geometry(f"+{x}+{y}")
+    return win
+
