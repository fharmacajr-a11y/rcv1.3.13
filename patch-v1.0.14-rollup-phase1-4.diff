+# util de hash (sha256) unificado
+# v1.0.14
+from __future__ import annotations
+import hashlib
+from pathlib import Path
+
+def sha256_file(path) -> str:
+    # Calcula SHA-256 de um arquivo no disco (streaming).
+    p = Path(path)
+    h = hashlib.sha256()
+    with p.open("rb") as f:
+        for chunk in iter(lambda: f.read(8192), b""):
+            h.update(chunk)
+    return h.hexdigest()
+
+__all__ = ["sha256_file"]
+
