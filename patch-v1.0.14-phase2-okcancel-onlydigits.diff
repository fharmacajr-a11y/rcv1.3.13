+# Fase 2: OkCancelMixin (n√£o-invasivo; classes podem herdar quando conveniente)
+class OkCancelMixin:
+    def __init__(self, *args, **kwargs):
+        super().__init__(*args, **kwargs)  # type: ignore[misc]
+        self._cancel_result = None
+
+    def _ok(self, value=True):
+        try:
+            self._finalize_ok(value)
+        except AttributeError:
+            pass
+        try:
+            self.result = value  # dialogs costumam usar .result
+        except Exception:
+            pass
+        try:
+            self.destroy()
+        except Exception:
+            pass
+
+    def _cancel(self):
+        self._cancel_result = False
+        try:
+            self.result = False
+        except Exception:
+            pass
+        try:
+            self.destroy()
+        except Exception:
+            pass
