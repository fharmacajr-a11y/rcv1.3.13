+# util compartilhado de resolução de caminho de recursos (PyInstaller-friendly)
+# v1.0.14
+from __future__ import annotations
+import os
+import sys
+
+def resource_path(relative_path: str) -> str:
+    # Retorna caminho absoluto para relative_path em dev e em build (PyInstaller)
+    try:
+        base_path = getattr(sys, "_MEIPASS")  # type: ignore[attr-defined]
+    except Exception:
+        base_path = os.path.abspath(".")
+    return os.path.join(base_path, relative_path)
+
+__all__ = ["resource_path"]
+
